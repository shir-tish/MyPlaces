<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/glacier">
    <item>
        <selector>
            <item android:state_selected="true">
                <shape android:shape="rectangle">
                    <stroke android:color="@color/grey5" android:width="2dp"/>
                    <solid android:color="@color/glacier"/>
                    <corners android:radius="30dp"/>
                </shape>
            </item>
            <item android:state_activated="true">
                <shape android:shape="rectangle">
                    <stroke android:color="@color/grey5" android:width="2dp"/>
                    <solid android:color="@color/glacier"/>
                    <corners android:radius="30dp"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:color="@color/grey5" android:width="2dp"/>
                    <gradient android:startColor="@color/glacier"
                        android:endColor="@color/hippie_blue"
                        android:angle="45"/>
                    <corners android:radius="30dp"/>
                </shape>
            </item>
        </selector>
    </item>

</ripple>
